# AI Email Assistant Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT_SECONDS=5.0
OPENAI_MAX_LATENCY_MS=800

# Server Configuration
HOST=127.0.0.1
PORT=8502
DEBUG_MODE=false

# =============================================================================
# GOOGLE API CONFIGURATION
# =============================================================================

# OAuth2 Credentials File Path (relative to project root)
GOOGLE_CREDENTIALS_FILE=credentials.json

# OAuth2 Configuration
OAUTH_TIMEOUT_SECONDS=120
OAUTH_REDIRECT_PORT=8080
OAUTH_REDIRECT_HOST=localhost

# Google API Scopes
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly
CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar.events

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Email Processing
EMAIL_FETCH_DAYS=10
EMAIL_MAX_RESULTS=20
EMAIL_PROCESSING_DELAY_SECONDS=0.2

# Response Generation
DEFAULT_TONE=professional
SIGNATURE=â€” Your Assistant
MAX_RESPONSE_TOKENS=200
RESPONSE_TEMPERATURE=0.8

# Meeting Detection
MEETING_DEFAULT_DURATION_MINUTES=30
CALENDAR_TIMEZONE=America/Los_Angeles

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Performance Targets (milliseconds)
FAST_PATH_TARGET_MS=100
SMART_PATH_TARGET_MS=900

# Circuit Breaker Settings
CIRCUIT_BREAKER_WINDOW=10

# =============================================================================
# SECURITY & PRIVACY
# =============================================================================

# Application Name for Secure Storage
APP_NAME=SecureEmailAgent

# Privacy Settings
LOG_EMAIL_BODIES=false
STORE_EMAIL_CONTENT=false

# Data Directories
ENCRYPTED_DATA_DIR=encrypted_data
KEY_FILE_NAME=.key

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Business Hours (for scheduling suggestions)
BUSINESS_HOURS=09:00-17:00

# Auto CC/BCC (comma-separated email addresses)
AUTO_CC=
AUTO_BCC=

# Test Configuration
TEST_PORT=8503
TEST_HOST=127.0.0.1
TEST_TIMEOUT=10

# =============================================================================
# DOCKER CONFIGURATION (if using Docker)
# =============================================================================

# Docker Ports
DOCKER_INTERNAL_PORT=8502
DOCKER_EXTERNAL_PORT=8502

# Docker Volumes
DOCKER_DATA_VOLUME=./encrypted_data:/app/encrypted_data

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode
DEV_MODE=false
DEV_PORT=8502
DEV_HOST=127.0.0.1
DEV_LOG_LEVEL=info

# Test Email IDs (for testing purposes)
TEST_EMAIL_ID=192736c46228737a
TEST_MESSAGE_ID=test-message-id

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. The .env file should contain your real API keys and credentials
# 3. Make sure your Google Cloud Console redirect URIs include:
#    - http://localhost:8080/
#    - http://127.0.0.1:8080/
# 4. Get your OpenAI API key from: https://platform.openai.com/api-keys
# 5. Download Google OAuth credentials from Google Cloud Console