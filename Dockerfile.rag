# RAG-Enhanced Secure Email Agent Dockerfile
# ==========================================

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements_rag.txt requirements.txt ./
RUN pip install --no-cache-dir -r requirements_rag.txt

# Copy application code
COPY *.py ./
COPY templates/ ./templates/
COPY static/ ./static/

# Create directories for data and vector storage
RUN mkdir -p /app/data /app/data/vectorstore

# Set environment variables
ENV PYTHONPATH=/app
ENV DATA_DIR=/app/data
ENV VECTORSTORE_DIR=/app/data/vectorstore
ENV PYTHONUNBUFFERED=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8600/api/stats || exit 1

# Expose port
EXPOSE 8600

# Default command (can be overridden)
CMD ["python", "ultimate_web_ui_v3_rag.py"]